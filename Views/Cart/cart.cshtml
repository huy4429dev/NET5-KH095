@{
     ViewData["Title"] = "cart";

    Layout = "_Layout";
}
@model List<CartItem>
@section Css{
    <link rel="stylesheet" href="~/style-cart.css" />
    <link rel="stylesheet" href="~/_responsive.css" />
}
<style>
    td, th {
        padding: 10px;
    }
</style>

@if (Model.Count > 0) {
  decimal total = 0;
  int stt = 1;

