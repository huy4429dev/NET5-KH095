@{
  Layout = "_Layout";
}
@model List<Product>
@section Css{
    <link rel="stylesheet" href="/style-product-category.css" />
    <link rel="stylesheet" href="_responsive.css" />
}

<div class="payment">
    <div class="container">
        <div class="payment-option row">
            <div class="option-wrap row">
                <input type="radio" id="acc-type-1" name="acc-type" value="acc-type-1" style=margin-top:5px;>
                </input>
                <label for="acc-type-1" style="margin-left:10px;">
                    <h6>Đăng ký tài khoản</h6>
                </label>
            </div>
            <div class="option-wrap row">
                <input type="radio" id="acc-type-2" name="acc-type" value="acc-type-2" style=margin-top:5px;>
                </input>
                <label for="acc-type-2" style="margin-left:10px;">
                    <h6>Mua hàng không cần tài khoản</h6>
                </label>
            </div>
        </div>
        <div class="payment-detail">
            <div class="row">
                <div class="col-4">
                    <div class="payment-info-box">
                        <div class="title row">
                            <i class="fa fa-user" aria-hidden="true" style="font-size:22px;"></i>
                            <h5 class="ml-20">Thông tin giao hàng</h5>
                        </div>
                        <div class="payment-info">
                            <div class="row">
                                <div class="col-6 pt-5">
                                    *Tên:
                                </div>
                                <div class="col-6">
                                    <input type="text" style="margin-top:0px;" id="name" name="name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 pt-10">
                                    Email:
                                </div>
                                <div class="col-6">
                                    <input type="text" id="email" name="email">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 pt-11">
                                    *Điện thoại:
                                </div>
                                <div class="col-6">
                                    <input type="text" id="phone" name="phone">
                                </div>
                            </div>
                            <div class="row mt-30">
                                <div class="col-6 pt-11">
                                    Địa chỉ:
                                </div>
                                <div class="col-6">
                                    <input type="text" id="address" name="address">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 pt-11">
                                    Quận / Huyện:
                                </div>
                                <div class="col-6">
                                    <input type="text" id="district" name="district">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 pt-11">
                                    *Tỉnh:
                                </div>
                                <div class="col-6">
                                    <select name="province" id="province">
                                        <option value="0">An Giang</option>
                                        <option value="1">Bà Rịa - Vũng Tàu</option>
                                        <option value="2">Bắc Giang</option>
