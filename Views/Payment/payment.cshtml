                                        <option value="10">Bình Định</option>
                                        <option value="11">Cà Mau</option>
                                        <option value="12">Cần Thơ</option>
                                        <option value="13">Cao Bằng</option>
                                        <option value="14">Dak Lak</option>
                                        <option value="15">Dak Nông</option>
                                        <option value="16">Gia Lai</option>
                                        <option value="17">Hà Giang</option>
                                        <option value="18">Hà Nam</option>
                                        <option value="19">Hà Nội</option>
                                        <option value="20">Hà Tây</option>
                                        <option value="21">Hà Tĩnh</option>
                                        <option value="22">Hải Dương</option>
                                        <option value="23">Hải Phòng</option>
                                        <option value="24">Hậu Giang</option>
                                        <option value="25" selected="selected">Hồ Chí Minh</option>
                                        <option value="26">Hòa Bình</option>
                                        <option value="27">Hòa Bình</option>
                                        <option value="28">Huế</option>
                                        <option value="29">Hưng Yên</option>
                                        <option value="30">Khánh Hòa</option>
                                        <option value="31">Kiên Giang</option>
                                        <option value="32">Kontum</option>
                                        <option value="33">Lai Châu</option>
                                        <option value="34">Lâm Đồng</option>
                                        <option value="35">Lạng Sơn</option>
                                        <option value="36">Lào Cai</option>
                                        <option value="37">Long An</option>
                                        <option value="38">Nam Định</option>
                                        <option value="39">Nghệ An</option>
                                        <option value="40">Ninh Bình</option>
                                        <option value="41">Ninh Thuận</option>
                                        <option value="42">Phú Thọ</option>
                                        <option value="43">Phú yên</option>
                                        <option value="44">Quảng Bình</option>
                                        <option value="45">Quãng Nam</option>
                                        <option value="46">Quãng Ngãi</option>
                                        <option value="47">Quãng Ninh</option>
                                        <option value="48">Quãng Trị</option>
                                        <option value="49">Sóc Trăng</option>
                                        <option value="50">Sơn La</option>
